<ol><h2>Your task list</h2>

<% @tasks.each do |task| %>
<li>
  <h3><%= task.name %></h3>
  <ol>
  <li><%= link_to "View Task", task_path(task) %></li>
  <li><%= link_to "Edit task", edit_task_path(task) %></li>
  <li><%= link_to "Delete Task", task_path(task), :confirm => "Are you sure?", :method => :delete %></li>
  </ol>
<% end %>
</li>
</ol>


<ul><h2>Actions</h2>
<li><%= link_to "Add a new task", new_task_path %></li>
</ul>
